<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SportSphere.App"
             x:Class="SportSphere.App.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Cores Principais -->
            <Color x:Key="Primary">#3498DB</Color>
            <Color x:Key="PrimaryDark">#2980B9</Color>
            <Color x:Key="Secondary">#2ECC71</Color>
            <Color x:Key="SecondaryDark">#27AE60</Color>
            <Color x:Key="Tertiary">#9B59B6</Color>
            <Color x:Key="TertiaryDark">#8E44AD</Color>
            <Color x:Key="MidnightBlue">#2c3e50</Color>
            <Color x:Key="PrimaryDarkText">#333333</Color>

            <!-- Cores de Texto -->
            <Color x:Key="TextPrimary">#333333</Color>
            <Color x:Key="TextSecondary">#666666</Color>
            <Color x:Key="TextTertiary">#999999</Color>
            <Color x:Key="TextLight">#FFFFFF</Color>

            <!-- Cores de Fundo -->
            <Color x:Key="Background">#FFFFFF</Color>
            <Color x:Key="BackgroundDark">#F5F5F5</Color>
            <Color x:Key="BackgroundLight">#FAFAFA</Color>
            <Color x:Key="Surface">#F5F5F5</Color>

            <!-- Cores de Alerta -->
            <Color x:Key="Success">#2ECC71</Color>
            <Color x:Key="Warning">#F39C12</Color>
            <Color x:Key="Danger">#E74C3C</Color>
            <Color x:Key="Error">#F44336</Color>
            <Color x:Key="Info">#3498DB</Color>

            <!-- Cores de Cinza -->
            <Color x:Key="Gray100">#F8F9FA</Color>
            <Color x:Key="Gray200">#E9ECEF</Color>
            <Color x:Key="Gray300">#DEE2E6</Color>
            <Color x:Key="Gray400">#CED4DA</Color>
            <Color x:Key="Gray500">#ADB5BD</Color>
            <Color x:Key="Gray600">#6C757D</Color>
            <Color x:Key="Gray700">#495057</Color>
            <Color x:Key="Gray800">#343A40</Color>
            <Color x:Key="Gray900">#212529</Color>
            <Color x:Key="Gray950">#1A1A1A</Color>

            <!-- Cores do Sistema -->
            <Color x:Key="White">White</Color>
            <Color x:Key="Black">Black</Color>
            <Color x:Key="Transparent">Transparent</Color>

            <!-- Estilos Básicos -->
            <Style TargetType="Label" x:Key="HeaderLabel">
                <Setter Property="FontSize" Value="24" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
                <Setter Property="Margin" Value="0,0,0,10" />
            </Style>

            <Style TargetType="Label" x:Key="SubHeaderLabel">
                <Setter Property="FontSize" Value="18" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
                <Setter Property="Margin" Value="0,0,0,5" />
            </Style>

            <Style TargetType="Button" x:Key="PrimaryButton">
                <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="CornerRadius" Value="5" />
                <Setter Property="Padding" Value="15,10" />
                <Setter Property="FontAttributes" Value="Bold" />
            </Style>

            <Style TargetType="Button" x:Key="SecondaryButton">
                <Setter Property="BackgroundColor" Value="{StaticResource Secondary}" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="CornerRadius" Value="5" />
                <Setter Property="Padding" Value="15,10" />
                <Setter Property="FontAttributes" Value="Bold" />
            </Style>

            <Style TargetType="Frame" x:Key="CardFrame">
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="Padding" Value="15" />
                <Setter Property="BackgroundColor" Value="White" />
                <Setter Property="BorderColor" Value="#DDDDDD" />
                <Setter Property="HasShadow" Value="True" />
                <Setter Property="Margin" Value="0,0,0,10" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
